<div style="display: inline-block;">
	<form action="{{ path('tk_group_add_member') }}" method="post" {{ form_enctype(form) }}>
	    {{ form_errors(form) }}

	    {{ form_errors(form.name) }}
	    {{ form_widget(form.name, 
            { 'attr': { 'placeholder' : 'Enter his name'}}) 
        }}

        {{ form_errors(form.email) }}
	    {{ form_widget(form.email, 
            { 'attr': { 'placeholder' : 'Email (optional)'}}) 
        }}

	    {{ form_rest(form) }}
    	<input type="submit" value="Add" class="btn btn-success" style="vertical-align: top"/>
	</form>
</div>