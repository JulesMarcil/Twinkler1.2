<div class="add-members">
	<div class="subheader">
		<span style="display: block; height: 30px; vertical-align: middle; padding-left: 10px;">
			<h3>Or Find more friends who are on Twinkler</h3>
		</span>
	</div>

	{% if twinkler_facebook_friends|length == 0 %}
	<p>You do not have any other friend on Twinkler :( Invite them !</p>
	{% else %}
	<table>
		<tbody>
		{% for user in twinkler_facebook_friends %}
		<tr>
			<td style="width: 40px;">
				<img src="http://graph.facebook.com/{{user.facebookId}}/picture?width=60&height=60" alt="{{ user }}" style="position: relative; margin-right: 20px;" width="30px">
			</td>
			<td>{{ user }}</td>
			<td class="add-button"><a href="{{ path('tk_group_add_friend', { 'id' : user.id }) }}" class="btn btn-small">Add</a></td>
		</tr>
		{% endfor %}
		{% endif %}
		</tbody>
	</table>

	<div class="subheader">
		<span style="display: block; height: 30px; vertical-align: middle; padding-left: 10px;">
			<h3>Or Find more friends on Facebook</h3>
		</span>
	</div>
	<div id="facebook-table">
		<div style="text-align: center">
			<input id="facebook-input" placeholder="Type a name ...">
		</div>

		<table>
			<tbody>
			{% for friend in other_facebook_friends %}
			<tr>
				<td style="width: 40px;">
					<img src="http://graph.facebook.com/{{friend.id}}/picture?width=60&height=60" alt="{{ friend.name }}" style="position: relative; margin-right: 20px;" width="30px">
				</td>
				<td class="name">{{ friend.name }}</td>
				<td class="add-button"><a href="{{ path('tk_group_add_facebook', { 'id' : friend.id, 'name' : friend.name }) }}" class="btn btn-small">Add</a></td>
			</tr>
			{% endfor %}
			</tbody>
		</table>
	</div>	

</div>