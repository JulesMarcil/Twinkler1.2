<div>
	<h4>or add one of your Twinkler friends</h4>
	{% if app.user.friends|length == 0 %}
		<p>Yo do not have any friend on Twinkler yet, invite them !</p>
	{% else %}
	{% for user in app.user.friends  %}
		{% if user.facebookId %}
		<img src="http://graph.facebook.com/{{user.facebookId}}/picture?width=60&height=60" class="img-circle" alt="{{ user }}" style="position: relative; margin-right: 20px;" width="30px">
		{% else %}
		<img src="{{ asset(user.picture.path) }}" class="img-circle" alt="{{ user }}" style="position: relative; margin-right: 20px;" width="30px">
		{% endif %}
		{{ user }}
		<a href="{{ path('tk_group_add_friend', { 'id' : user.id }) }}" class="btn btn-small">Add to my group</a>
	{% endfor %}
	{% endif %}
</div>