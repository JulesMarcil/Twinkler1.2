{% trans_default_domain 'FOSUserBundle' %}

<div class="flat-container">
	<div class="flat-header">
		<h1>Sign up</h1>	
	</div>
	<p>{{ facebook_login_button({'autologoutlink': false, 'label': 'Connect with Facebook', 'size' : 'large'}) }}</p>
    <div style="display: inline-block; width:100%">
        <div style="display: inline-block; width:40%">
            <div style="min-height:50%; border-bottom: 1px solid rgb(245,103,99); margin-top:-5px;"></div>
        </div>
        <div style="display: inline-block;width:10%; color:rgb(245,103,99)">
        Or
        </div>
        <div style="display: inline-block;width:40%">
            <div style="min-height:50%; border-bottom: 1px solid rgb(245,103,99); margin-top:-5px;"></div>
        </div>
    </div>
	<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register" style="margin-top: 20px;">
        {{ form_errors(form) }}

	    {{ form_errors(form.username) }}
        {{ form_widget(form.username) }}

        {{ form_errors(form.email) }}
        {{ form_widget(form.email) }}

        {{ form_errors(form.plainPassword) }}
        {{ form_widget(form.plainPassword) }}

        {{ form_rest(form) }}

	    <div>
	        <input class="btn btn-success" type="submit" value="{{ 'registration.submit'|trans }}" style="width: 120px;margin-top: 20px; margin-bottom: 10px;" />
	    </div>
        <div>
        </div>
	</form>
    <div class="flat-footer">
	   <p>Have an account ? <a href="{{ path('fos_user_security_login') }}">Log in</a></p>
    </div>
</div>
